<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F5F8"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/recommended_book_image"
            app:riv_corner_radius="3dp"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/recommended_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Thần điêu đại hiệp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recommended_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_book_title"
                android:layout_marginVertical="5dp"
                android:text="Kim Dung"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recommended_book_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_book_author"
                android:layout_marginVertical="2dp"
                android:text="NXB Kim Đồng"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recommended_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_book_publisher"
                android:layout_marginVertical="2dp"
                android:text="50.000VND"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recommended_book_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommended_book_price"
                android:text="Nguời bán: thaibk210"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>