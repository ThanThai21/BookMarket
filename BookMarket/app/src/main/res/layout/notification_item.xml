<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_noti_item"
    android:padding="10dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/noti_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/03/2018"
        android:textColor="@color/white"
        android:layout_toStartOf="@id/noti_time"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:00"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/noti_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/library_roundedimageview_author"
        android:layout_below="@id/noti_date"
        android:textColor="@color/white"
        android:textSize="16.5sp"/>
</RelativeLayout>